<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewRear"
            android:layout_width="365dp"
            android:layout_height="250dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="40dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="@id/constraintLayout1"
            app:layout_constraintStart_toStartOf="@id/constraintLayout1"
            tools:ignore="MissingConstraints"
            >
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:text="+ INVITE"
                android:textColor="@color/dblue" />
            <TextView
                android:id="@+id/itemNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="31dp"
                android:gravity="left"
                android:text="Saket Sanadhya"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:textColor="#10334e"
                android:textSize="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="56dp"
                android:gravity="left"
                android:text="Nagpur, within 17.7KM"
                android:textAlignment="gravity"
                android:textSize="14dp"
                android:textColor="#436377" />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="13dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="102dp"
                android:progress="60"
                android:minHeight="13dp"
                android:progressTint="#10334e"
                android:progressDrawable="@drawable/progressdrawabledesign"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:gravity="left"
                android:text="Coffee | Business | Friendship"
                android:textAlignment="gravity"
                android:textColor="#10334e"
                android:textSize="14dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="146dp"
                android:layout_marginBottom="15dp"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:maxLength="100"
                android:text="Hi community! We have great deals for you. Check us out!! "
                android:textSize="16dp"
                android:textColor="#436377" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="288dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout1"
        app:layout_constraintTop_toTopOf="@id/constraintLayout1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>