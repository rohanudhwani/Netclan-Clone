    <ToggleButton
        android:id="@+id/toggleButton6"
        style="@drawable/button_toggle_background"
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/button_background"
        android:padding="8dp"
        android:text="Dining"
        android:textAllCaps="false"
        android:textColor="@drawable/text_color_selector"
        android:textOff="Dining"
        android:textOn="Dining"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton2" />

    <ToggleButton
        android:id="@+id/toggleButton7"
        style="@drawable/button_toggle_background"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/button_background"
        android:padding="8dp"
        android:text="Dating"
        android:textAllCaps="false"
        android:textColor="@drawable/text_color_selector"
        android:textOff="Dating"
        android:textOn="Dating"
