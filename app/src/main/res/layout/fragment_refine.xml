        android:layout_margin="16dp"
        android:background="@drawable/button_background"
        android:padding="8dp"
        android:text="Movies"
        android:textAllCaps="false"
        android:textColor="@drawable/text_color_selector"
        android:textOff="Movies"
        android:textOn="Movies"
